<div data-role="header">
  <h1>Eintrag #<%= @entry.id %></h1>
</div>
<div data-role="content">
  <p id="notice"><%= notice %></p>
  <p>
  	<h3>Zeitpunkt</h3>
    <%= @entry.start_pit %>
  </p>
  <p>
  	<h3>Dauer</h3>
    <%= distance_of_time_in_words(@entry.duration) %>
  </p>
  <p>
  	<h3>Schmerzart</h3>
    <%= @entry.entry_type %>
  </p>
  <p>
  	<h3>Schmerzort</h3>
    <ul>
      <% @entry.locations.each do |location| %>
		<li><%= location.title %></li>
      <% end %>
    </ul>
  </p>
  <p>
  	<h3>Ausl√∂ser</h3>
    <ul>
      <% @entry.triggers.each do |trigger| %>
		<li><%= trigger.title %></li>
      <% end %>
    </ul>
  </p>
  <p>
  	<h3>Kommentare</h3>
    <%= @entry.comments %>
  </p>
  <dl>
  	<dt>def term</dt>
  	<dd>def text1</dd>
  	<dd>def text2</dd>
  	<dd>def text3</dd>
  </dl>
</div>
<div data-role="footer" >
  <%= link_to 'Edit', edit_entry_path(@entry) %>
  <%= link_to 'Destroy', @entry, confirm: 'Are you sure?', method: :delete %>
  <%= link_to 'Back', entries_path %>
</div>

