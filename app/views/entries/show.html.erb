<div data-role="header">
  <h1><%= l @entry.start_pit, :format => :date_only %></h1>
</div>
<div data-role="content">
	<div class="ui-grid-a ui-responsive">
		<div class="ui-block-a">	  	
			<h3>Beginn</h3>
	    	<%= l @entry.start_pit, :format => :time_only %>
		</div>
		<div class="ui-block-b">	
			<h3>Dauer</h3>
	    	<%= distance_of_time_in_words(@entry.duration) %>			
		</div>
	</div>
	<p>
	  	<h3>Schmerzart</h3>
	    <%= @entry.entry_type %>
	</p>
	<p>		
	  	<h3>Schmerzort</h3>
	    <ul>
	      <% @entry.locations.each do |location| %>
			<li><%= location.title %></li>
	      <% end %>
	    </ul>		
	</p>	
  	<p>
	  	<h3>Auslöser</h3>
	    <ul>
	      <% @entry.triggers.each do |trigger| %>
			<li><%= trigger.title %></li>
	      <% end %>
	    </ul>
  	</p>
  	<p>
	  	<h3>Eingenommene Medikamente</h3>
	    <ul>
	      <% @entry.intakes.each do |intake| %>
			<li><%= "#{intake.formated_amount} #{intake.medication.title}, #{intake.effect[2..-1]}" %></li>
	      <% end %>
	    </ul>
  	</p>
	  <p>
	  	<h3>Kommentare</h3>
	    <%= @entry.comments %>
	  </p>  
</div>
<div data-role="navbar" data-position="fixed">
	<ul>
		<li><%= link_to "Bearbeiten", edit_entry_path %></li>
		<li><%= link_to 'Löschen', @entry, confirm: 'Wirklich löschen?', method: :delete %></li>
		<li><%= link_to "Übersicht", entries_path %></li>
	</ul>
</div><!-- /navbar -->
